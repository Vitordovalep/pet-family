<div class="container-pages">

  <h1>Lista de Tarefas</h1>
  <div class="header-home">
      <% @pets.each do |pet| %>
        <%= render "avatar_pet", pet: pet %>
      <% end %>
      <div class="add-pet-btn btn">
        <%= link_to new_family_pet_path(@family) do %>
          <i class="fa-solid fa-circle-plus fa-spin"></i>
        <% end %>
      </div>
  </div>
  <div>
    <%# calendario %>
    <h2>Calend√°rio</h2>

    <%= calendar(number_of_days: 1, events: @calendar_schedules) do |day, events|%>
    <div><strong><%= day.day.to_s %></strong></div>
      <div class="tasks-home">
        <% events.each do |event|%>
        <%# Tasks do dia %>
          <%= link_to event.task do %>
              <div class="task-card">
                <div class="task-card-icon">
                  <%= render "icon_tasks", category: event.task.category %>
                </div>
                <div class="task-card-description">
                  <p><strong><%= event.task.category %></strong></p>
                  <p><%= event.task.description.truncate(40) %>.</p>
                  <%= render "avatar_pet", pet: event.pet %>
                </div>
                <div class="task-card-hour">
                  <p><strong><%= event.due_time.strftime('%H:%M') %></strong></p>
                  <div>
                    <%= render "avatar_user", user: event.user %>
                  </div>
                </div>
              </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

<%= link_to new_task_path do %>
  <i id="sticky-btn", class="fa-solid fa-circle-plus fa-3x"></i>
<% end %>
