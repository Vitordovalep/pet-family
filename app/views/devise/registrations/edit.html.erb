<div class="container-pages">
  <h1>Editar</h1>
      <div class="form-edit">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Aguardando confirmação de: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password, label: 'Nova senha',
                        hint: "Deixe em branco caso não queira mudar",
                        required: false,
                        placeholder: "******",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: 'Confirmar senha',
                        required: false,
                        placeholder: "******",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password, label: 'Senha atual',
                        hint: "Digite senha atual para concluir alteração",
                        required: true,
                        placeholder: "******",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :photo, as: :file %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Editar", class: "btn btn-primary" %>
            <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
          </div>
        <% end %>
</div>
