<div class="container-pages">
  <h1>Editar</h1>
  <div class="class row">
    <div class="col-xs-12 col-sm-offset-4">
      <div class="form-edit">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Aguardando confirmação de: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password, label: 'Nova senha',
                        hint: "Deixe em branco caso não queira mudar",
                        required: false,
                        placeholder: "******",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: 'Confirmar senha',
                        required: false,
                        placeholder: "******",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password, label: 'Senha atual',
                        hint: "Digite senha atual para concluir alteração",
                        required: true,
                        placeholder: "******",
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Editar", class: "btn btn-primary" %>
          </div>
        <% end %>

  <div style="margin: 16px 0;">
    <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?", turbo_confirm: "Você tem certeza?" }, method: :delete, class: "btn btn-danger" %>
  </div>

  <div class="w-100 d-flex justify-content-center align-items-flex-end">
    <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
  </div>

</div>
