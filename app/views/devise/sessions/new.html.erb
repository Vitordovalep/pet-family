<div class="container-pages">
   <h1>Acessar</h1>
  <div class="class row">
    <div class="col-xs-12 col-sm-offset-4">
      <div class="form-edit">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "exemplo@email.com",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "******",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: "Lembrar email", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-secondary" %>
          </div>

        <% end %>

        <div class="d-flex" style="justify-content: space-between; margin: 28px;">
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>
