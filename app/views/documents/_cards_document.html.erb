<div data-filter-pets-target="card">
  <% @documents.each do |document| %>
    <%= link_to document_path(document) do %>
      <div class="task-card">
        <div class="task-card-icon">
          <%= image_tag "outros.svg" %>
        </div>
        <div class="task-card-description">
          <p><strong><%= document.name %></strong></p>
          <p><%= document.description.truncate(35) %>.</p>
        </div>
        <div class="task-card-hour">
          <%= render "shared/avatar_small_pet",  pet: document.pet %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
