<div class="container-pages">
  <h1>Olá, <%= @user.name %>!</h1>
  <div class="card-header">
    <% if @user.photo.attached? %>
      <%= image_tag @user.photo, class: "avatar-large" %>
    <% else %>
      <%= image_tag "https://res.cloudinary.com/doohtp0fi/image/upload/v1678725327/default_avatar_x8awn9.jpg", class: "avatar-large" %>
    <% end %>
  </div>

  <div class="wrap-card-white">

    <%= link_to edit_user_registration_path do %>
      <div class="card-white">
        <p class="card-white-item-left"><i class="fa-solid fa-user-pen"></i></p>
        <h2>Meus Dados</h2>
        <p class="card-white-item-right"><i class="fa-solid fa-angles-right"></i></p>
      </div>
    <% end %>

    <%= link_to pet_path do %>
      <div class="card-white">
        <p class="card-white-item-left"><i class="fa-solid fa-paw"></i></p>
        <h2>Pets da família</h2>
        <p class="card-white-item-right"><i class="fa-solid fa-angles-right"></i></p>
      </div>
    <% end %>

    <%= link_to profiles_path do %>
      <div class="card-white">
        <p class="card-white-item-left"><i class="fa-solid fa-people-roof"></i></p>
        <h2>Família e Membros</h2>
        <p class="card-white-item-right"><i class="fa-solid fa-angles-right"></i></p>
      </div>
    <% end %>

  </div>

   <%= link_to "Sair do app", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-secondary btn-lg btn-block", style: "width: 90%; border-radius: 5px;" %>

</div>
