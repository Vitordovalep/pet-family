<div class="container">
  <div class="card-header">
    <h1>Olá, <%= @user.name %>!</h1>
    <% if @user.photo.attached? %>
      <%= image_tag @user.photo, class: "avatar-large" %>
    <% else %>
      <%= image_tag "https://res.cloudinary.com/doohtp0fi/image/upload/v1678725327/default_avatar_x8awn9.jpg", class: "avatar-large" %>
    <% end %>
  </div>

  <div>

    <%= link_to edit_user_registration_path do %>
      <div class="card-white">
        <i class="fa-solid fa-user-pen"></i>
        Meus Dados
        <i class="fa-solid fa-angles-right"></i>
      </div>
    <% end %>

    <%= link_to root_path do %>
      <div class="card-white">
        <p><i class="fa-solid fa-paw"></i></p>
        Pets da família
        <p><i class="fa-solid fa-angles-right"></i></p>
      </div>
    <% end %>

    <%= link_to root_path do %>
      <div class="card-white">
        <p><i class="fa-solid fa-people-roof"></i></p>
        Família e Membros
        <p><i class="fa-solid fa-angles-right"></i></p>
      </div>
    <% end %>


  </div>

  <div class="w-100 d-flex justify-content-center">
    <%= link_to "Sair do app", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-secondary btn-lg w-100" %>
  </div>
</div>
